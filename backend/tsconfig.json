{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2023"
    ],
    "baseUrl": ".",
    "module": "node16",
    "moduleResolution": "node16",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@env": [
        "./src/env.ts"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@http/*": [
        "./src/http/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
