    "fastify": "5.0.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "4.0.1",
    "postgres": "3.4.4",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.9.2",
    "@types/node": "^22.9.2",
    "drizzle-kit": "0.24.2",
    "eslint": "^9.15.0",
    "eslint-plugin-format": "^0.1.2",
    "tsup": "^8.3.0",
    "tsx": "4.19.1",
    "typescript": "5.6.2"
